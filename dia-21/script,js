function sumaDiagonal(matriz) {
  let resultado = 0;                     // Inicializa la suma en 0
  for (let i = 0; i < matriz.length; i++) { // Recorre la matriz con un bucle
    resultado += matriz[i][i];                // Accede a los elementos de la diagonal principal y los suma
  }
  return resultado;                      // Devuelve el total
}


let matriz = [
  [5, 3, 12],
  [8, 7, 44],
  [15, 10, 77],
];

console.log(sumaDiagonal(matriz)); //89
