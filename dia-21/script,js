function promedioNotas(arrayNotas) {
  const valoInicial =0;
  let promedio = arrayNotas.reduce((acumulador, valorActual)=>{
    return acumulador + valoInicial;
  }, valoInicial);
  promedio = promedio / arrayNotas.length;
  return promedio;
}

